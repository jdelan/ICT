<div class="page-header">
  <h1>
    Tracked Companies
    <a href="/trackings/new" class="btn btn-lg btn-success">Add More</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Company</th>
        <th>Actions</th>
      </tr>

      <% @trackings.each do |tracking| %>
      <tr>
        <td><a href="/delete_tracking/<%= tracking.id %>"><%= tracking.company.name %></td>
        <td>
          <a href="/delete_tracking/<%= tracking.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
