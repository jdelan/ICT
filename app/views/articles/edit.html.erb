<!-- Validation failure messages -->
<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Article #<%= @article.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_article/<%= @article.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for url -->
      <div class="form-group">
        <label for="url" class="control-label">
          Url
        </label>

        <textarea id="url" name="url" placeholder="Url" class="form-control" rows="3"><%= @article.url %></textarea>
      </div>

      <!-- Label and input for tag -->
      <div class="form-group">
        <label for="tag" class="control-label">
          Tag
        </label>

        <input type="text" id="tag" name="tag" placeholder="Tag" class="form-control" value="<%= @article.tag %>">
      </div>

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <textarea id="title" name="title" placeholder="Title" class="form-control" rows="3"><%= @article.title %></textarea>
      </div>

      <!-- Label and input for company_id -->
      <div class="form-group">
        <label for="company_id" class="control-label">
          Company
        </label>

        <input type="text" id="company_id" name="company_id" placeholder="Company" class="form-control" value="<%= @article.company_id %>">
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @article.date %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @article.user_id %>">
      </div>

      <button class="btn btn-warning">
        Update Article
      </button>
      or
      <a href="/articles/<%= @article.id %>">Cancel</a>
    </form>
  </div>
</div>
