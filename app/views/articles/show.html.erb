<div class="page-header">
  <h3><%= @article.title %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Url</dt>
      <dd><a href="<%= @article.url %>"><%= @article.url %></a></dd>

      <!-- <dt>Tag</dt>
      <dd><%= @article.tag %></dd> -->

      <dt>Title</dt>
      <dd><%= @article.title %></dd>

      <dt>Company</dt>
      <dd><% @article.stories.each do |story| %>
        <a href="/companies/<%= story.company.id %>"><%= story.company.name %></a>
        <% end %></dd>

        <dt>Date</dt>
        <dd><%= @article.date %></dd>

        <dt>User</dt>
        <dd><%= @article.user.username %></dd>

      </dl>
      <% if @article.user_id == current_user.id then %>
      <div class="btn-group btn-group-justified">
        <a href="/articles" class="btn btn-primary">
          Back
        </a>
        <a href="/articles/<%= @article.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_article/<%= @article.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      </div>
      <% end %>
    </div>
  </div>
