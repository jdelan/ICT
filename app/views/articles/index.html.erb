<div class="page-header">
  <h1>
    Articles
    <a href="/articles/new" class="btn btn-lg btn-success">New Article</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Url</th>
        <th>Tag</th>
        <th>Title</th>
        <th>Company</th>
        <th>Date</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @articles.each do |article| %>
      <tr>
        <td><%= article.url %></td>
        <td><%= article.tag %></td>
        <td><%= article.title %></td>
        <td><%= article.company_id %></td>
        <td><%= article.date %></td>
        <td><%= article.user_id %></td>
        <td>
          <a href="/articles/<%= article.id %>" class="btn btn-primary">Show</a>
          <a href="/articles/<%= article.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_article/<%= article.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
