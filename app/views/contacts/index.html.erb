<div class="page-header">
  <h1>
    Contacts
    <a href="/contacts/new" class="btn btn-lg btn-success">New Contact</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Role</th>
        <th>Email</th>
        <th>Phone number</th>
        <th>Notes</th>
        <th>Company</th>
        <th>Available Actions</th>
      </tr>

      <% @contacts.each do |contact| %>
      <tr>
        <td><a href="/contacts/<%= contact.id %>"><%= contact.name %></td>
        <td><%= contact.role %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone_number %></td>
        <td><%= contact.notes %></td>
        <td><%= contact.company.name %></td>
        <td>
          <a href="/contacts/<%= contact.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_contact/<%= contact.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
