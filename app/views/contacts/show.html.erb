<div class="page-header">
  <h3>Contact: <%= @contact.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @contact.name %></dd>

      <dt>Role</dt>
      <dd><%= @contact.role %></dd>

      <dt>Email</dt>
      <dd><%= @contact.email %></dd>

      <dt>Phone number</dt>
      <dd><%= @contact.phone_number %></dd>

      <dt>Notes</dt>
      <dd><%= @contact.notes %></dd>

      <dt>Company</dt>
      <dd><a href="/companies/<%= @contact.company.id %>"><%= @contact.company.name %></a></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/contacts" class="btn btn-primary">
        Back
      </a>
      <a href="/contacts/<%= @contact.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_contact/<%= @contact.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
