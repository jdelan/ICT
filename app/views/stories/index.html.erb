<div class="page-header">
  <h1>
    Stories
    <a href="/stories/new" class="btn btn-lg btn-success">New Story</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Company</th>
        <th>Article</th>
        <th>Actions</th>
      </tr>

      <% @stories.each do |story| %>
      <tr>
        <td><%= story.company_id %></td>
        <td><%= story.article_id %></td>
        <td>
          <a href="/stories/<%= story.id %>" class="btn btn-primary">Show</a>
          <a href="/stories/<%= story.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_story/<%= story.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
