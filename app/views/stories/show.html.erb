<div class="page-header">
  <h3>Story #<%= @story.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Company</dt>
      <dd><%= @story.company_id %></dd>

      <dt>Article</dt>
      <dd><%= @story.article_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/stories" class="btn btn-primary">
        Back
      </a>
      <a href="/stories/<%= @story.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_story/<%= @story.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
