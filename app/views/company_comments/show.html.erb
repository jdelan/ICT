<div class="page-header">
  <h3>Company Comment #<%= @company_comment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Comment</dt>
      <dd><%= @company_comment.comment %></dd>

      <dt>Company</dt>
      <dd><%= @company_comment.company_id %></dd>

      <dt>User</dt>
      <dd><%= @company_comment.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/company_comments" class="btn btn-primary">
        Back
      </a>
      <a href="/company_comments/<%= @company_comment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_company_comment/<%= @company_comment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
