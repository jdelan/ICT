<div class="page-header">
  <h1>
    Recent Comments on Companies
    <a href="/company_comments/new" class="btn btn-lg btn-success">New Company comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Company</th>
        <th>Last Updated</th>
        <th>Comment</th>
        <th>User</th>
        <th>Available Actions</th>
      </tr>

      <% @company_comments.each do |company_comment| %>
      <tr>
        <td><%= company_comment.company.name %></td>
        <td><%= time_ago_in_words(company_comment.updated_at) %> ago</td>
        <td><a href="/companies/<%= company_comment.company.id %>"><%= company_comment.comment %></td>
        <td><%= company_comment.user.username %></td>
        <td>
          <% if company_comment.user_id == current_user.id then %>
          <a href="/company_comments/<%= company_comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_company_comment/<%= company_comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
